@model IEnumerable<Car>

<table class="table" style="background-color:azure">
    <thead>
        <tr>
            <th>Numer Rejestracyjny</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Silnik</th>
            <th>Rok Produkcji</th>
            <th>Przebieg</th>
            <th>Moc Silnika</th>
            <th>Opis</th>
            <th>Status</th>
            <th>Miniaturka</th>
            <th>
                <a asp-action="CreateCar" class="btn btn-danger btn-sm">Dodaj nowy</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Plates)</td>
                <td>@Html.DisplayFor(modelItem => item.Mark)</td>
                <td>@Html.DisplayFor(modelItem => item.Model)</td>
                <td>@Html.DisplayFor(modelItem => item.Engine)</td>
                <td>@Html.DisplayFor(modelItem => item.YearOfProduction)</td>
                <td>@Html.DisplayFor(modelItem => item.VehicleMileage)</td>
                <td>@Html.DisplayFor(modelItem => item.EnginePower)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.CarStatus)</td>
                <td><img src="@item.ThumbnaulUrl" height="150" width="150" /></td>
                <td>
                    <a asp-action="DetailsCar" asp-route-id="@item.CarId" class="btn btn-success btn-sm" style="margin-bottom:3px">Szczegóły</a>
                    <a asp-action="EditCar" asp-route-id="@item.CarId" class="btn btn-success btn-sm" style="margin-bottom:3px">Edytuj</a>
                    <a asp-action="DeleteCar" asp-route-id="@item.CarId" class="btn btn-success btn-sm" style="margin-bottom:3px">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>


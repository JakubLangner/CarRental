
@model Car

<div>
    <div class="thumbnail">
        <div class="row">
            <div class="col-md-6">
                <img alt="@Model.Mark" src="@Model.ImageUrl" height="500" width="500" />
            </div>
            <div class="col-md-6">
                <h3>@Model.Mark - @Model.Model</h3>
                <h4>@Model.Plates</h4>
                <h4>@Model.YearOfProduction</h4>
                <h4>@Model.VehicleMileage</h4>
                <h4>@Model.Engine</h4>
                <h4>@Model.EnginePower</h4>
                <p>@Model.Description</p>
                <h2>Na pewno chcesz usunąć?</h2>
                <h4 class="pull-right">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CarId" />
                        <input type="hidden" asp-for="ImageUrl" />
                        <input type="submit" value="Usuń" class="btn btn-success" />
                        <a asp-action="Cars" class="btn btn-success">Powrót</a>
                    </form>
                </h4>
            </div>
        </div>
    </div>
</div>
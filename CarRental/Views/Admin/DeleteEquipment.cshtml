
@model AdditionalEquipment

<div>
    <div class="thumbnail">
        <div class="row">
            <div class="col-md-6">
                <h3>@Model.AdditionalEquipmentId</h3>
                <h4>@Model.Type</h4>

                <h2>Na pewno chcesz usunąć?</h2>
                <h4 class="pull-right">
                    <form asp-action="DeleteEquipment">
                        <input type="hidden" asp-for="AdditionalEquipmentId" />
                        <input type="submit" value="Usuń" class="btn btn-success" />
                        <a asp-action="Equipments" class="btn btn-success">Powrót</a>
                    </form>
                </h4>
            </div>
        </div>
    </div>
</div>
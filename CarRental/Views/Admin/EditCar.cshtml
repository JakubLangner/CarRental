@model Car

<h2>Edytuj Samochod</h2>
<hr />
<div class="row">

    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="UploadFile">
            <div class="form-group">
                <input type="hidden" asp-for="CarId" />
                <label class="control-label">Zdjęcie samochodu</label><br />
                <img src="@ViewBag.ImgPath" height="300" width="300" /><br />
                <input type="file" name="file" style="margin-top:10px" />
            </div>
            <div class="form-group">
                <input type="submit" value="Załaduj zdjęcie" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <form asp-action="EditCar">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CarId" />
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Mark" class="control-label">Marka</label>
                <input asp-for="Mark" class="form-control" />
                <span asp-validation-for="Mark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Model</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plates" class="control-label">Rejestracja</label>
                <input asp-for="Plates" class="form-control" />
                <span asp-validation-for="Plates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearOfProduction" class="control-label">Rok Produkcji</label>
                <input asp-for="YearOfProduction" class="form-control" />
                <span asp-validation-for="YearOfProduction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Engine" class="control-label">Silnik</label>
                <input asp-for="Engine" class="form-control" />
                <span asp-validation-for="Engine" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="EnginePower" class="control-label">Moc Silnika</label>
                <input asp-for="EnginePower" class="form-control" />
                <span asp-validation-for="EnginePower" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VehicleMileage" class="control-label">Przebieg</label>
                <input asp-for="VehicleMileage" class="form-control" />
                <span asp-validation-for="VehicleMileage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarStatus" class="control-label">Status Auta</label>
                <input asp-for="CarStatus" class="form-control" />
                <span asp-validation-for="CarStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">Opis</label>
                <input asp-for="Description" class="form-control info" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ImageUrl" value="@ViewBag.ImgPath" />
            <input type="hidden" asp-for="ThumbnaulUrl" value="@ViewBag.ImgPath" />

            <div class="form-group">
                <input type="submit" value="Edytuj samochód" class="btn btn-success" style="margin-top:30px" />
                <a asp-action="Cars" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
            </div>
        </div>
    </form>
</div>
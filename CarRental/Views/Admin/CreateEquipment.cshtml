@model AdditionalEquipment

<h2>Dodaj Dodatkowy Sprzęt</h2>
<hr />
<div class="row">

    <form asp-action="CreateEquipment">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Type" class="control-label">Nazwa</label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Dodaj sprzęt" class="btn btn-success" style="margin-top:30px" />
                <a asp-action="Equipments" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
            </div>
        </div>
    </form>
</div>
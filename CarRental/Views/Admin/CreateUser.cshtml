@{
    ViewData["Title"] = "Edytuj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CarRental.ViewModels.Admin.AdminUsersView

<form asp-action="CreateUser">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Utwórz użytkownika</h4>
    </div>
    <div class="modal-body form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group col-lg-10">
                    <label asp-for="UserName" class="control-label">Użytkownik</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="Password" class="control-label">Hasło</label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="PhoneNumber" class="control-label">Numer Telefonu</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="Email" class="control-label">Adres e-mail</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="FirstName" class="control-label">Imię</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="LastName" class="control-label">Nazwisko</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    @Html.ListBoxFor(m => m.Role, Model.Roles, new { @class = "form-control" })
                    @Html.ValidationMessageFor(i => i.Roles,
                        "", new { @class = "text-warning" })
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a asp-action="Users" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
        <input type="submit" value="Dodaj użytkownika" class="btn btn-success" style="margin-top:30px" />
    </div>
</form>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


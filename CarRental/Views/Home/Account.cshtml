@{
    ViewData["Title"] = "Edytuj";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model CarRental.ViewModels.Home.UserVM

<form asp-action="Account">

    <div class="modal-body form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserName" />
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group col-lg-10">
                    <label asp-for="FirstName" class="control-label">Imię</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                    @if (TempData["AccountError"] != null)
                    {
                        <div class="text-danger">
                            @TempData["AccountError"]
                        </div>
                    }
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="LastName" class="control-label">Nazwisko</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="PhoneNumber" class="control-label">Numer Telefonu</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group col-lg-10">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a asp-action="Index" class="btn btn-danger pull-right" style="margin-top:30px">Powrót</a>
        <input type="submit" value="Edytuj dane" class="btn btn-success" style="margin-top:30px" />
    </div>
</form>
@await Html.PartialAsync("_ValidationScriptsPartial")

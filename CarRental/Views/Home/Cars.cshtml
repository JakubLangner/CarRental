@model CarRental.ViewModels.HomeVM

<h2>@Model.Title</h2>

@foreach (var car in Model.cars)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@car.ThumbnaulUrl" alt="">
            <div class="caption">
                <h3 class="pull-right"> @car.Mark @car.Model</h3>
                <h3>
                    <a asp-controller="Home" asp-action="Details" asp-route-id="@car.CarId">@car.Mark</a> - @car.Model - @car.YearOfProduction
                </h3>
                <h4>
                    Przebieg : @car.VehicleMileage
                </h4>
                <h4>
                   Silnik: @car.Engine
                </h4>
                <h4>
                    Moc : @car.EnginePower
                </h4>
                <p>@car.Description</p>
            </div>
        </div>
    </div>
}
